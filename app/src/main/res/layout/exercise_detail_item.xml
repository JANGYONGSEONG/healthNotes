<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >
    <CheckBox
        android:id="@+id/exerciseDetailCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/exerciseImage"
        android:layout_width="@dimen/exerciseDetail_image_width"
        android:layout_height="@dimen/exerciseDetail_image_height"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/exerciseTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/exerciseDetail_text_margin"
        android:gravity="center_vertical"
        android:textColor="@color/base_txt"
        android:textSize="@dimen/exerciseDetail_content"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/totalSet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/base_txt"
            android:textSize="@dimen/exerciseDetail_content"
            android:layout_toLeftOf="@id/set"
            />

        <TextView
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/base_txt"
            android:textSize="@dimen/exerciseDetail_content"
            android:text=" set"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>